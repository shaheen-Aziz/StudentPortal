@model StudentPortal.Web.Models.AddStudentViewModel

@*  by adding the above line we can access the properties of AddstudentViewModel inside the cshtml now we can bind the properties inside the cshtml *@

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create Student</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h2>Add Students with their basic information</h2>
        <form method="post">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" class="form-control" id="name" name="Name" asp-for="Name"> 
                @* asp-for has the the access of AddStudentViewModel give controll space to revel the properties *@
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" class="form-control" id="email" name="Email" asp-for="Email">
            </div>

            <div class="form-group">
                <label for="phone">Phone:</label>
                <input type="text" class="form-control" id="phone" name="Phone" asp-for="Phone">
            </div>
            <div class="form-check form-check-inline">
                <input type="radio" class="form-check-input" id="subscribed" name="Subscribed" value="true" asp-for="Subscribed">
                <label class="form-check-label" for="subscribed">Subscribed</label>
            </div>
            <div class="form-check form-check-inline">
                <input type="radio" class="form-check-input" id="unsubscribed" name="Subscribed" value="false" asp-for="Subscribed">
                <label class="form-check-label" for="unsubscribed">Unsubscribed</label>
            </div>
            <br />

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

    <!-- Bootstrap JS (optional) -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
